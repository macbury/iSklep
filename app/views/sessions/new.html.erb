<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
	"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
	<title>iSklep - logowanie</title>
	<%= stylesheet_link_tag 'desktop' %>
	<%= javascript_include_tag :all %>
</head>

<body>
	
	<div class="header">
		<div class="center">
			<h1>Logowanie</h1>
		</div>
	</div>
	<%- flash.each do |typ, msg| -%>
		<div class="<%= typ %>">
			<%= msg %>
		</div>
	<%- end -%>
	<div class="content" style="width: 300px">
		
		<% form_tag session_path do -%>
		<p><%= label_tag 'Login' %><br />
		<%= text_field_tag 'login', @login %></p>

		<p><%= label_tag 'password', 'Hasło' %><br/>
		<%= password_field_tag 'password', nil %></p>


		<p>
			<%= check_box_tag 'remember_me', '1', @remember_me %>
			<%= label_tag 'remember_me', 'Zapamiętaj mnie' %>
		</p>
		<div style="height:10px"></div>
		<p><%= submit_tag 'Zaloguj' %></p>
		<% end -%>
	</div>

</body>
</html>

